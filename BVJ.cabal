-- Initial BVJ.cabal generated by cabal init.  For further documentation, 
-- see http://haskell.org/cabal/users-guide/

name:                BVJ
version:             0.1.0.0
-- synopsis:            
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Stefan Koppier
maintainer:          s.koppier@students.uu.nl
-- copyright:           
category:            Verification
build-type:          Simple
extra-source-files:  src/Analysis/CFA.ag
                   , src/Analysis/Syntax.ag
                   , src/Analysis/Complete.ag
                   , Makefile
                   , README.md
cabal-version:       >=1.10

library
  exposed-modules:     Parsing.Phase
                       Parsing.Utility
                       Parsing.Pretty
                       Analysis.Phase
                       Analysis.Complete
                       Analysis.Reachability
                       Linearization.Phase
                       Linearization.Path
                       Linearization.Utility
                       Translation.Phase
                       Verification.Phase
                       Verification.Result
                       Complete
                       Control.Phase
                       Control.Verbosity
  other-modules:       Fold
  -- other-extensions:    
  build-tools:         
  build-depends:       base                >= 4.10 && < 4.11
                     , fgl                 >= 5.6  && < 5.7
                     , process             >= 1.6.1 && < 1.6.2 
                     , pretty
                     , xeno
                     , utf8-string
                     , language-java  
                     , language-c     
                     , transformers-either
                     , containers
                     , directory
                     , async
  hs-source-dirs:      src
  default-language:    Haskell2010
  ghc-options:         -Wall
                       -XLambdaCase
  extensions:          TupleSections
                     , TypeSynonymInstances
                     , FlexibleInstances
                     , OverloadedStrings 
executable app
    hs-source-dirs:    app
    main-is:           Main.hs
    build-depends:     base >= 4.10 && <4.11
                     , BVJ
    default-language:  Haskell2010
    ghc-options:       -Wall